<UserControl
    x:Class="MuscleApplication.Desktop.FavouriteExercisesProgressControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MuscleApplication.Desktop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Border
        Width="300"
        Height="150"
        Background="{StaticResource ForegroundLightBrush}"
        CornerRadius="5">

        <!--  Favourite lifts (for now hardcoded)  -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Style="{StaticResource StatisticsTextBlock}" Text="Squat: 130 kg" />
            <TextBlock Style="{StaticResource StatisticsTextBlock}" Text="Bench Press: 80 kg" />
            <TextBlock Style="{StaticResource StatisticsTextBlock}" Text="Deadlift: 178 kg" />
            <TextBlock Style="{StaticResource StatisticsTextBlock}" Text="Overhead Press: 78 kg" />
        </StackPanel>

    </Border>
</UserControl>
