<UserControl
    x:Class="MuscleApplication.Desktop.UserInformationControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MuscleApplication.Desktop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Border
        Width="300"
        Height="150"
        Background="{StaticResource ForegroundLightBrush}"
        CornerRadius="5">

        <!--  Age, weight, Height and BMI information (for now hardcoded)  -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Style="{StaticResource StatTextblock}" Text="Age: 23" />
            <TextBlock Style="{StaticResource StatTextblock}" Text="Weight: 80kg" />
            <TextBlock Style="{StaticResource StatTextblock}" Text="Height: 178cm" />
            <TextBlock Style="{StaticResource StatTextblock}" Text="Your BMI is 24 which is okay :)" />
        </StackPanel>

    </Border>
</UserControl>
